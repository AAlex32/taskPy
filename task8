with open(r"C:\Users\AAnuchin\Desktop\Скриншоты\Новый текстовый документ.txt", 'r', encoding='utf-8') as file:
    original_text = file.read()

reversed_text = original_text[::-1]

with open(r"C:\Users\AAnuchin\Desktop\Скриншоты\Обратный текст.txt", 'w', encoding='utf-8') as file:
    file.write(reversed_text)

print("Исходный файл:")
print(original_text)
print("\nОбратный файл:")
print(reversed_text)
